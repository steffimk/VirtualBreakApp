<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.virtualbreak.view.view_activitys.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_singleGroupFragment"
            app:destination="@id/singleGroupFragment"
            app:enterAnim="@anim/fragment_open_enter" />
    </fragment>

    <fragment
        android:id="@+id/nav_myprofile"
        android:name="com.example.virtualbreak.view.view_activitys.ui.myprofile.MyProfileFragment"
        android:label="@string/menu_myprofile"
        tools:layout="@layout/fragment_myprofile" />

    <fragment
        android:id="@+id/singleGroupFragment"
        android:name="com.example.virtualbreak.view.view_activitys.ui.singlegroup.SingleGroupFragment"
        android:label="Deine Gruppe"
        tools:layout="@layout/fragment_singlegroup" />

</navigation>