<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_height"
    card_view:cardBackgroundColor="@color/light_gray"
    card_view:strokeColor="@color/light_gray2"
    card_view:strokeWidth="1dp"
    card_view:cardCornerRadius="3dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/group_list_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_group_24" />

            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/group_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_name"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textSize="20sp"/>

        </LinearLayout>

</com.google.android.material.card.MaterialCardView>