<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VirtualBreak" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/blue_dark_night</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/mandarin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mandarin</item>
        <item name="colorSecondaryVariant">@color/sinopia</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark_night</item>
        <!-- Customize your theme here. -->

        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Theme.VirtualBreak.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VirtualBreak.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VirtualBreak.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.VirtualBreak.BreakroomToolbar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark_night</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorSurface">@color/darkblue_ripple</item>
        <item name="colorOnSurface">@color/darkblue</item>
    </style>

    <!--Button customised-->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>