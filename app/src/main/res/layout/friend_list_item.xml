<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_height"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/cafe"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="12dp">

        <ImageView
            android:id="@+id/friend_list_image"
            android:layout_width="@dimen/group_list_height"
            android:layout_height="match_parent"
            android:backgroundTint="@color/coffee"/>

        <TextView
            android:id="@+id/friend_list_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="@string/friend_name"/>


</LinearLayout>