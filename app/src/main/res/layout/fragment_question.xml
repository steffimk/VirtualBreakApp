<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question_base_view"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="5dp"
    tools:context=".view.view_fragments.question.QuestionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_alignParentStart="true"
            android:textColor="@color/sinopia"
            android:text="Frage"/>
        <ImageButton
            android:id="@+id/expand_question_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:tint="@color/sinopia"
            android:src="@drawable/ic_baseline_expand_less_24"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

    <EditText
        android:id="@+id/question_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxHeight="130dp"
        android:hint="@string/question_placeholder"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_question_btn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:backgroundTint="@color/sinopia"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="@string/saveQuestion"
            app:icon="@drawable/push_pin_white_24dp" />
        <!--    <ImageButton-->
<!--        android:id="@+id/save_question_btn"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:background="@null"-->
<!--        android:tint="@color/sinopia"-->
<!--        android:src="@drawable/push_pin_white_24dp"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_height="58dp"-->
<!--        android:layout_width="wrap_content" />-->

    </LinearLayout>

</LinearLayout>