        <!--            android:padding="3dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:background="@color/blue_dark_night"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            android:src="@drawable/ic_action_send"-->
        <!--            android:text="@string/send_message"-->
        <!--            android:tint="@color/white" />-->

    </LinearLayout>



