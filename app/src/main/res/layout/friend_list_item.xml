<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_height"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/blue_columbia"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="12dp"
    android:weightSum="5">

        <ImageView
            android:id="@+id/friend_list_image"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/ic_menu_camera"
            android:layout_height="match_parent"
            android:backgroundTint="@color/coffee"/>

        <TextView
            android:id="@+id/friend_list_name"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginStart="@dimen/margin_10"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/min_List_text_size"
            android:autoSizeMaxTextSize="@dimen/max_List_text_size"
            android:text="@string/friend_name"/>

        <TextView
            android:id="@+id/friend_list_status"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginStart="@dimen/margin_10"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/min_List_stat_size"
            android:autoSizeMaxTextSize="@dimen/max_List_stat_size"
            android:text="@string/friend_stat"/>


</LinearLayout>