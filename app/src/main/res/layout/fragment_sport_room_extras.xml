<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.view_fragments.sportRoom.SportRoomExtrasFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/timerView"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="00m 00s"
                android:textSize="58dp" />

            <LinearLayout
                android:id="@+id/inputRow_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/inputBtn_0"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:id="@+id/inputBtn_1"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="1"/>
                <Button
                    android:id="@+id/inputBtn_2"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="2"/>
                <Button
                    android:id="@+id/inputBtn_3"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="3"/>
                <Button
                    android:id="@+id/inputBtn_4"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:text="4"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputRow_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/inputBtn_5"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="5" />

                <Button
                    android:id="@+id/inputBtn_6"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="6" />

                <Button
                    android:id="@+id/inputBtn_7"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="7" />

                <Button
                    android:id="@+id/inputBtn_8"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="8" />

                <Button
                    android:id="@+id/inputBtn_9"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:text="9" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startTimer_btn"
                android:layout_width="315dp"
                android:layout_height="58dp"
                android:backgroundTint="@color/mandarin"
                android:text="@string/startTimer"
                app:icon="@drawable/ic_hourglass_24"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:textAllCaps="true"
                android:textColor="@color/light_green"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>