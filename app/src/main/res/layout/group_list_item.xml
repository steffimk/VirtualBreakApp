<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_height"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/blue_columbia"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="12dp">


        <TextView
            android:id="@+id/group_list_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:autoSizeMaxTextSize="@dimen/max_List_group_size"
            android:autoSizeMinTextSize="@dimen/min_List_group_size"
            android:autoSizeTextType="uniform"
            android:text="@string/group_name" />


</LinearLayout>