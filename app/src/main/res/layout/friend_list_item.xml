<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friend_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_height"
    card_view:cardBackgroundColor="@color/cafe"
    card_view:cardCornerRadius="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/friends_select_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="gone"
                    android:focusableInTouchMode="false"
                    />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/friend_list_image"
                    android:layout_width="@dimen/group_list_height"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/brow_sugar"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerCrop"
                    card_view:riv_corner_radius="6dp"/>

                <TextView
                    android:id="@+id/friend_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="@string/friend_name"/>

        <TextView
            android:id="@+id/friend_list_status"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginStart="@dimen/margin_10"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/min_List_stat_size"
            android:autoSizeMaxTextSize="@dimen/max_List_stat_size"
            android:text="@string/friend_stat"/>


        </LinearLayout>

</androidx.cardview.widget.CardView>