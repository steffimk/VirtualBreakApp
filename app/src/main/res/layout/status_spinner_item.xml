<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friend_item_layout"
    card_view:cardBackgroundColor="@color/blue_Dark_cornflower"
    card_view:rippleColor="@color/darkblue_ripple"
    card_view:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="8dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/status_spinner_img"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:src="@drawable/status_circle_busy"
            android:contentDescription="status symbol" />

        <TextView
            android:id="@+id/status_spinner_text"
            style="?android:attr/spinnerItemStyle"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:text="BeschÃ¤ftigt"
            android:textAlignment="inherit"/>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>